<%- include("header") -%>
        <div class="box"box id="heading">
            <h1> <%=ListTitle%> Todo list! </h1>
        </div>

        <div class="box">

            <% for(let i=0 ; i<=newListItem.length ; i++) { %>
                <div class="item">
                    <input type="checkbox">
                    <p> <%= newListItem[i] %> </p>
                </div>
            <% } %>

            <form action="/" method="post" class="item">

                <input type="text" name="newItem" placeholder="New Task" autocomplete="off">
                <button type="submit" name="List" value="<%=ListTitle%>" >+</button>

            </form>
        </div>
<%- include("footer") -%>
